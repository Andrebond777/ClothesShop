@model ClothesShop.Models.ViewModels.ShoppingCartVM

<section id="cart_items">
    <div class="container">
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Фото</td>
                        <td class="description text-center">Назва</td>
                        <td class="price text-center pr-4">Ціна</td>
                        <td class="text-center">Кількість</td>
                        <td class="text-center">Розмір</td>
                        <td class="text-center">Колір</td>
                        @*<td class="total">Всього</td>*@
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListCart)
                    {
                        @*<input hidden asp-for="@item.ProductId" />*@
                        <tr class="">
                            <td class="cart_product">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Product.Id" target="_blank"><img src="@item.Product.ImagesUrl[0].Path" alt="Фото..." height="60"></a>
                            </td>
                            <td class="cart_description text-center">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Product.Id" target="_blank">@item.Product.Title</a>
                            </td>
                            <td class="cart_price">
                                @item.Product.Price грн
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">
                                    <a class="cart_quantity_down" asp-action="minus" asp-route-cartId="@item.Id"> - </a>
                                    <input class="cart_quantity_input" type="text" name="quantity" value="@item.Count" autocomplete="off" size="2">
                                    <a class="cart_quantity_up" asp-action="plus" asp-route-cartId="@item.Id"> + </a>
                                </div>
                            </td>
                            <td class="cart_select">
                                <select asp-for="@item.Size" class="col-11">
                                    <option value="Виберіть розмір">Виберіть розмір</option>
                                    <option value="XS">XS</option>
                                    <option value="S">S</option>
                                    <option value="M">M</option>
                                    <option value="L">L</option>
                                    <option value="XL">XL</option>
                                </select>
                            </td>
                            <td class="cart_select">
                                <select name="@item.Color" class="col-11">
                                    <option value="Виберіть колір">Виберіть колір</option>
                                    <option value="Білий">Білий</option>
                                    <option value="Синій">Синій</option>
                                    <option value="Червоний">Червоний</option>
                                </select>
                            </td>

                            @*<td class="cart_total">
                    <p class="cart_total_price"><b>@item.OneTypeTotal</b> грн</p>
                </td>*@
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" asp-action="remove" asp-route-cartId="@item.Id"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->