@model IEnumerable<ClothesShop.Models.Product>

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
					<div class="left-sidebar">
						<h2>Категорії</h2>
						<div class="panel-group category-products" id="accordian"><!--category-productsr-->
							
							@foreach (var item in ViewBag.Categories)
                            {
								<div class="panel panel-default">
									<div class="panel-heading">
										<h4 class="panel-title"><a asp-action="Index" asp-route-categoryName="@item.SubName">@item.SubName</a></h4>
									</div>
								</div>
                            }

						</div><!--/category-products-->
					
					</div>
				</div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Товари</h2>
                    <div class="col-sm-12">
                        <div class="product-image-wrapper">
                            @foreach (var product in Model)
                            {
                                <div class="single-products col-sm-4">
                                    <div class="productinfo text-center">
                                        
                                        <a asp-action="Details" asp-route-id="@product.Id">
                                        @if (product.ImagesUrl.Count() > 0)
                                        {
                                            <img src="@product.ImagesUrl[0].Path" alt="Фото..." />
                                        }
                                        </a>
                                        <h2 class="pt-1">@product.Price ₴</h2>
                                        <p>@product.Title</p>
                                        <a asp-action="AddToCartFromIndex" asp-route-id="@product.Id" class="btn btn-default add-to-cart rounded-pill"><i class="fa fa-shopping-cart"></i>Купити</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div><!--features_items-->
            </div>
        </div>
    </div>
</section>